<%- include('./partials/header') %>

<div class="flex bg-zinc-900 flex-col items-center gap-10 mt-13"> <!-- Added mt-24 to avoid overlap with fixed header -->
  <% user.cart.forEach(function(item){ %>
  <div class="w-full rounded-md overflow-hidden flex items-center px-10 py-7 gap-10">
    <div class="w-[20%]">
      <img class="w-60"
        src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
        alt="Product Image"
      />
    </div>
    <div class="w-[70%]">
      <h3 class="text-white">Price Breakdown</h3>
      <div class="px-10 mt-5">
        <div class="flex mt-2">
          <h4 class="text-white w-1/3">Total MRP</h4>
          <h4 class="text-white">₹ <%= item.price %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="text-white w-1/3">Discount on MRP</h4>
          <h4 class="text-white">₹ <%= item.discount %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="text-white w-1/3">Platform Fee</h4>
          <h4 class="text-white">₹ 20</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="text-white w-1/3">Shipping Fee</h4>
          <h4 class="text-white">FREE</h4>
        </div>
      </div>
      <div class="w-full h-[1px] bg-black mt-10"></div>
      <div class="flex mt-5">
        <h3 class="w-1/3 text-white text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('./partials/footer') %>
